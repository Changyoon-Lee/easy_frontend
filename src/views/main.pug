extends base

block content
    ul(class="flex flex-wrap")
        each article in articles
            li(key=article.id class="m-6")
                a(href=`/article/${article.id}` )
                    div(class="h-36 w-52 rounded-xl shadow-sm bg-gray-200 overflow-hidden relative")
                        if article.video
                            video(src=article.video class="object-cover h-full") 
                        else 
                            div(class="")
                    div(class="text-sm flex justify-between") 
                        span(class="font-bold mt-2")=article.title 
                        span #{article.views} view
                    ul(class="flex")
                        for hashtag in article.hashtags
                            li(class="text-sm bg-yellow-100 py-1 px-2 rounded-lg") ##{hashtag.hashtag}
    a(class="space-x-2 fixed right-8 bottom-8 text-white bg-sky-600 rounded-md justify-end p-3 py-4" href="/article/create")
            i(class="fa-solid fa-plus")
            span(class="font-bold") upload Video
